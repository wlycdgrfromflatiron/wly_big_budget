<div class="flex-column login-container full-height" >
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>

  <%= form_with scope: @user, class: 'login-form', url: target_url do |f| %>
    <%= f.text_field :email, placeholder: 'Email' %>
    <%= f.password_field :password, placeholder: 'Password' %>
    <%= f.submit submit_label %>
  <% end %>

  <%= link_to 'Log in with Amazon', '/auth/amazon' %>

  <%= link_to link_label, link_path %>
</div>